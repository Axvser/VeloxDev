<Canvas x:Class="VeloxDev.WPF.WorkflowSystem.Views.Factory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeloxDev.WPF.WorkflowSystem.Views"
             xmlns:vm="clr-namespace:VeloxDev.WPF.WorkflowSystem.ViewModels"
             xmlns:dc="clr-namespace:VeloxDev.WPF.WorkflowSystem.Decorators"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:FactoryViewModel, IsDesignTimeCreatable=True}">

    <!--【节点】-->
    <ItemsControl ItemsSource="{Binding Children}">
        <!--请使用【绝对坐标】定位的布局容器-->
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <!--WPF中，注意Anchor需要以这种方式才能正确生效-->
        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="Canvas.Left" Value="{Binding Anchor.Left}"/>
                <Setter Property="Canvas.Top" Value="{Binding Anchor.Top}"/>
                <Setter Property="Panel.ZIndex" Value="{Binding Anchor.Layer}"/>
            </Style>
        </ItemsControl.ItemContainerStyle>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <local:Shower Width="100"
                    Height="100"
                    IsEnabled="{Binding IsEnabled}"
                    ConnectCommand="{Binding ConnectCommand}"
                    ConnectCommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                    Background="White"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

    <!--【真实连接】-->
    <ItemsControl ItemsSource="{Binding Connectors}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <dc:ConnectionDecorator StartAnchor="{Binding Start.Anchor}"
                                        EndAnchor="{Binding End.Anchor}"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

    <!--【虚拟连接】-->
    <dc:ConnectionDecorator StartAnchor="{Binding VirtualConnector.Start.Anchor}"
                            EndAnchor="{Binding VirtualConnector.End.Anchor}"
                            CanRender="{Binding VirtualConnector.IsEnabled}"/>
</Canvas>
