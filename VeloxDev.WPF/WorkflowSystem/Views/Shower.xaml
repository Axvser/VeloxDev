<Thumb x:Class="VeloxDev.WPF.WorkflowSystem.Views.Shower"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeloxDev.WPF.WorkflowSystem.Views"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:VeloxDev.WPF.WorkflowSystem.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ShowerNodeViewModel, IsDesignTimeCreatable=True}">
    <Thumb.Template>
        <ControlTemplate>
            <Grid Background="{TemplateBinding Background}">
                <local:Slot UID="0" Width="50" Height="50" Margin="0,70,750,330" Background="Yellow"/>
                <local:Slot UID="1" Width="50" Height="50" Margin="0,330,750,70" Background="Yellow"/>
                <local:Slot UID="2" Width="50" Height="50" Margin="750,200,0,200" Background="Yellow"/>
            </Grid>
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
