<Thumb x:Class="VeloxDev.WPF.WorkflowSystem.Views.Shower"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeloxDev.WPF.WorkflowSystem.Views"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:VeloxDev.WPF.WorkflowSystem.ViewModels"
             d:DesignHeight="50" d:DesignWidth="50"
             d:DataContext="{d:DesignInstance Type=vm:ShowerNodeViewModel, IsDesignTimeCreatable=True}">
    <Thumb.Template>
        <ControlTemplate>
            <Grid Background="{TemplateBinding Background}">
                <local:Slot UID="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Width="20" Background="Violet"/>
                <local:Slot UID="1" VerticalAlignment="Center" HorizontalAlignment="Right" Height="20" Width="20" Background="Violet"/>
                <local:Slot UID="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="20" Width="20" Background="Violet" Margin="0,30,0,0"/>
            </Grid>
        </ControlTemplate>
    </Thumb.Template>
</Thumb>
