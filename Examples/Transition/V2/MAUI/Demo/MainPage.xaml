<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <ContentPage.Resources>
        <LinearGradientBrush x:Key="Bs1" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Yellow" Offset="0"></GradientStop>
            <GradientStop Color="Violet" Offset="1"></GradientStop>
        </LinearGradientBrush>
    </ContentPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" x:Name="Rec0" Fill="Cyan" WidthRequest="100" HeightRequest="100"/>
        <Rectangle Grid.Row="3" x:Name="Rec1" Fill="Lime" WidthRequest="100" HeightRequest="100"/>
        <Rectangle Grid.Row="5" x:Name="Rec2" Fill="{StaticResource Bs1}" WidthRequest="100" HeightRequest="100"/>
    </Grid>

</ContentPage>
