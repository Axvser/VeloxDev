<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBlock Foreground="Black" Text="{Binding Greeting}" Margin="200,50,200,300"/>
        <Button Content="增加" Command="{Binding PlusCommand}" Margin="0,300,400,50"/>
        <Button Content="减少" Command="{Binding MinusCommand}" Margin="400,300,0,50"/>
    </Grid>
</Window>
