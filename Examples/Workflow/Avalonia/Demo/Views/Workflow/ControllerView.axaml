<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
			 x:Class="Demo.ControllerView"
			 xmlns:local="using:Demo"
			 xmlns:vm="using:Demo.ViewModels"
			 x:DataType="vm:ControllerViewModel">
	<Grid RowDefinitions="1*,2*,2*" ColumnDefinitions="8*,2*">
		<Border Grid.RowSpan="5"
				Grid.ColumnSpan="2"
				BorderThickness="1"
				CornerRadius="5"
				BorderBrush="White"
				Background="#2d2d2d" />
		<Border Grid.Row="0"
				Grid.ColumnSpan="2"
				BorderThickness="1"
				CornerRadius="5,5,0,0"
				Background="#2d2d2d"
				PointerPressed="OnPointerPressed"
				PointerReleased="OnPointerReleased"
				PointerMoved="OnPointerMoved"
				PointerCaptureLost="OnPointerCaptureLost">
			<TextBlock Text="任务发生器/终止器"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   Foreground="White"/>
		</Border>

		<Button Grid.Row="1"
				Grid.Column="0"
				Margin="20"
				Content="开始"
				VerticalContentAlignment="Center"
				Background="#1e1e1e"
				Foreground="White"
				Command="{Binding BroadcastCommand}"/>

		<Button Grid.Row="3"
				Grid.Column="0"
				Margin="20"
				Content="结束"
				VerticalContentAlignment="Center"
				Background="#1e1e1e"
				Foreground="White"
				Command="{Binding Parent.CloseCommand}"/>

		<ItemsControl ItemsSource="{Binding Slots}"
					  Grid.RowSpan="2"
					  Grid.ColumnSpan="2">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<Canvas />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemContainerTheme>
				<ControlTheme TargetType="ContentPresenter" x:DataType="vm:SlotViewModel">
					<Setter Property="Canvas.Left"
							Value="{Binding Offset.Left}" />
					<Setter Property="Canvas.Top"
							Value="{Binding Offset.Top}" />
				</ControlTheme>
			</ItemsControl.ItemContainerTheme>
			<ItemsControl.ItemTemplate>
				<DataTemplate x:DataType="vm:SlotViewModel">
					<local:SlotView Width="{Binding Size.Width}"
									Height="{Binding Size.Height}"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</UserControl>
