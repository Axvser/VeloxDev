<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
			 x:Class="Demo.NodeView"
			 xmlns:local="using:Demo"
			 xmlns:vm="using:Demo.ViewModels"
			 x:DataType="vm:NodeViewModel">
	<Grid RowDefinitions="10*,80*,25*">
		<!-- 渲染连接器 -->
		<Canvas Grid.RowSpan="3"
				Width="{Binding $parent[Grid].Bounds.Width}"
				Height="{Binding $parent[Grid].Bounds.Height}"
				ZIndex="6"
				local:ViewPool.ItemsSource="{Binding Slots}">
			<Canvas.DataTemplates>
				<DataTemplate DataType="vm:SlotViewModel">
					<local:SlotView Width="{Binding Size.Width}"
									Height="{Binding Size.Height}"
									Canvas.Left="{Binding Offset.Left}"
									Canvas.Top="{Binding Offset.Top}"/>
				</DataTemplate>
			</Canvas.DataTemplates>
		</Canvas>

		<!-- 标题栏 -->
		<Border Grid.Row="0"
				Background="#2d2d2d"
				CornerRadius="4,4,0,0"
				BorderThickness="0,0,0,0.5"
				BorderBrush="Gray"
				PointerPressed="OnPointerPressed"
				PointerReleased="OnPointerReleased"
				PointerMoved="OnPointerMoved"
				PointerCaptureLost="OnPointerCaptureLost">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<TextBlock Text=" SSH Connector " Foreground="White" VerticalAlignment="Center"/>
			</StackPanel>
		</Border>

		<!-- 配参区域 -->
		<Grid Grid.Row="1" Grid.ColumnDefinitions="8*,2*" Background="#2d2d2d">
			<!-- 参数配置区 -->
			<Grid Grid.Column="0">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<StackPanel Margin="20" Spacing="10">

						<!-- 主机配置 -->
						<Grid ColumnDefinitions="100,*" VerticalAlignment="Center">
							<TextBlock Text="主机:"
									   Foreground="White"
									   VerticalAlignment="Center"/>
							<TextBox Grid.Column="1"
									 Text="{Binding Host, Mode=TwoWay}"
									 Watermark="请输入主机地址"
									 Background="#3d3d3d"
									 Foreground="White"
									 BorderBrush="Gray"
									 BorderThickness="1"
									 Padding="5"/>
						</Grid>

						<!-- 端口配置 -->
						<Grid ColumnDefinitions="100,*" VerticalAlignment="Center">
							<TextBlock Text="端口:"
									   Foreground="White"
									   VerticalAlignment="Center"/>
							<TextBox Grid.Column="1"
									 Text="{Binding Port, Mode=TwoWay}"
									 Watermark="请输入端口号"
									 Background="#3d3d3d"
									 Foreground="White"
									 BorderBrush="Gray"
									 BorderThickness="1"
									 Padding="5"/>
						</Grid>

						<!-- 用户名配置 -->
						<Grid ColumnDefinitions="100,*" VerticalAlignment="Center">
							<TextBlock Text="用户名:"
									   Foreground="White"
									   VerticalAlignment="Center"/>
							<TextBox Grid.Column="1"
									 Text="{Binding UserName, Mode=TwoWay}"
									 Watermark="请输入用户名"
									 Background="#3d3d3d"
									 Foreground="White"
									 BorderBrush="Gray"
									 BorderThickness="1"
									 Padding="5"/>
						</Grid>

						<!-- 密码配置 -->
						<Grid ColumnDefinitions="100,*" VerticalAlignment="Center">
							<TextBlock Text="密码:"
									   Foreground="White"
									   VerticalAlignment="Center"/>
							<Grid Grid.Column="1" ColumnDefinitions="*,Auto">
								<TextBox Grid.Column="0"
										 Text="{Binding PassWord, Mode=TwoWay}"
										 Watermark="请输入密码"
										 Background="#3d3d3d"
										 Foreground="White"
										 BorderBrush="Gray"
										 BorderThickness="1"
										 Padding="5"/>
							</Grid>
						</Grid>

						<!-- 双因素认证 -->
						<Grid ColumnDefinitions="100,*" VerticalAlignment="Center">
							<TextBlock Text="MFA:"
									   Foreground="White"
									   VerticalAlignment="Center"/>
							<Grid Grid.Column="1" ColumnDefinitions="*,Auto">
								<TextBox Grid.Column="0"
										 Text="{Binding MFA, Mode=TwoWay}"
										 Watermark="请输入双因素认证码"
										 Background="#3d3d3d"
										 Foreground="White"
										 BorderBrush="Gray"
										 BorderThickness="1"
										 Padding="5"/>
							</Grid>
						</Grid>
					</StackPanel>
				</ScrollViewer>
			</Grid>
		</Grid>

		<!-- 功能按键 -->
		<Border Grid.Row="3"
				Padding="1"
				Background="#2d2d2d"
				CornerRadius="0,0,4,4">
			<Grid ColumnDefinitions="*,*">
				<Button Grid.Column="0" Content="Start" Command="{Binding WorkCommand}" Foreground="White" HorizontalAlignment="Stretch"/>
				<Button Grid.Column="1" Content="End" Command="{Binding CloseCommand}" Foreground="White" HorizontalAlignment="Stretch"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
